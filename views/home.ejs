<%-include("partials/header")-%>
<h1>Home</h1>
<p><%= startingContent %></p>

<% postList.forEach(function(post) { %>
<h1><%=post.title %></h1>
<% if (post.body.length > 100){ %>
  <p><%=post.body.substring(0,100)+"..."%></p>
  <a href="/posts/<%=post._id%>">Read More</a>
<% } else { %>
  <p><%=post.body%></p>
  <a href="/posts/<%=post._id%>">Read More</a>
<% } %>

<% }); %>
<%-include("partials/footer")-%>
